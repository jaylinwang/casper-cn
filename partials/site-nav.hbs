<nav class="site-nav">
    <div class="site-nav-left">
        {{^is "home"}}
            {{#if @site.logo}}
                <a class="site-nav-logo" href="{{@site.url}}"><img src="{{@site.logo}}" alt="{{@site.title}}" /></a>
            {{else}}
                <a class="site-nav-logo" href="{{@site.url}}">{{@site.title}}</a>
            {{/if}}
        {{/is}}
        {{#if @site.navigation}}
            {{navigation}}
        {{/if}}
    </div>
    <div class="site-nav-right">
        <div class="social-links">
            <a class="social-link social-link-fb" href="https://weibo.com/jaylin0019" title="微博" target="_blank" rel="noopener">{{> "icons/weibo"}}</a>
            <a class="social-link social-link-tw" href="https://github.com/jaylinwang" title="github" target="_blank" rel="noopener">{{> "icons/github"}}</a>
            <a class="social-link social-link-tw" href="https://twitter.com/jaylinwang" title="twitter" target="_blank" rel="noopener">{{> "icons/twitter"}}</a>
        </div>
        {{#if @labs.subscribers}}
            <a class="subscribe-button" href="#subscribe">订阅</a>
        {{else}}
            <a class="rss-button" href="https://feedly.com/i/subscription/feed/{{@site.url}}/rss/" title="RSS" target="_blank" rel="noopener">{{> "icons/rss"}}</a>
        {{/if}}
    </div>
</nav>
